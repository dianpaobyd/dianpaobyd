    "keywords": [
        "peer",
        "review",
        "marking",
        "assessment",
        "university",
        "higher education",
        "group",
        "marking",
        "mark"
    ],
    "authors": [
        {
            "name": "Andrew Millington",
            "email": "andrew@noexceptions.io",
            "homepage": "https://www.noexceptions.io",
            "role": "Developer"
        }
    ],
